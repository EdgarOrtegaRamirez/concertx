<% if @events.empty? %>

  <div class="well" style="text-align: center">
    <h2>No events were found...</h2>
    <%= link_to 'Crete a new event', new_event_path %>
  </div>

<% else %>
  <ul id="events-list" class="media-list">
  <% @events.each do |event| %>
    <%= render partial: 'event', locals: {event: event} %>
  <% end %>
  </ul>

  <%= paginate @events %>
  
<% end %>